  <script>
    function toggleMenu() {
      document.getElementById("navLinks").classList.toggle("active");
    }

    function sendContactForm(e) {
      e.preventDefault();
      const data = new FormData(e.target);
      alert('Thank you, ' + data.get('name') + '! Your message has been received.');
      e.target.reset();
    }
